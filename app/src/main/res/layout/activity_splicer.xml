<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
    <Button
        android:id="@+id/btn_go"
        android:layout_width="@dimen/lsq__space_140"
        android:layout_height="@dimen/lsq__space_60"
        android:layout_gravity="center_horizontal"
        android:text="@string/lsq_go" />
    
      <Button
        android:id="@+id/btn_clean"
        android:layout_width="@dimen/lsq__space_140"
        android:layout_height="@dimen/lsq__space_60"
        android:layout_gravity="center_horizontal"
        android:text="@string/lsq_clean" />    
        
      <Button
        android:id="@+id/btn_muxer"
        android:layout_width="@dimen/lsq__space_140"
        android:layout_height="@dimen/lsq__space_60"
        android:layout_gravity="center_horizontal"
        android:text="@string/lsq_comp" />   
        
      <Button
        android:id="@+id/btn_open"
        android:layout_width="@dimen/lsq__space_140"
        android:layout_height="@dimen/lsq__space_60"
        android:layout_gravity="center_horizontal"
        android:text="@string/lsq_open_comp" />    
        
      <TextView
        android:id="@+id/tv_muxer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/lsq_path" />  
    </LinearLayout>


</LinearLayout>
