<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        
      <Button
          android:id="@+id/btn_start_recorder"
          android:layout_width="@dimen/lsq__space_140"
          android:layout_height="@dimen/lsq__space_60"
          android:layout_gravity="center_horizontal"
          android:text="@string/lsq_start_recorder" />

      <Button
          android:id="@+id/btn_stop_recorder"
          android:layout_width="@dimen/lsq__space_140"
          android:layout_height="@dimen/lsq__space_60"
          android:layout_gravity="center_horizontal"
          android:text="@string/lsq_stop_recorder" />
      
      <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />  

</LinearLayout>
